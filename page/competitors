    document.addEventListener('DOMContentLoaded', function () {
        // --- 语言切换核心逻辑 ---
        const langSwitchDesktop = document.getElementById('lang-switch-desktop');
        const langSwitchMobile = document.getElementById('lang-switch-mobile');
        let currentLang = localStorage.getItem('language') || 'zh'; // 默认中文

        function translatePage(lang) {
            document.querySelectorAll('[data-lang-key]').forEach(el => {
                const key = el.getAttribute('data-lang-key');
                if (translations[key] && translations[key][lang]) {
                    el.innerHTML = translations[key][lang];
                }
            });
            document.documentElement.lang = lang; // 更新html的lang属性
            localStorage.setItem('language', lang); // 保存用户选择
        }

        function toggleLanguage() {
            currentLang = currentLang === 'zh' ? 'en' : 'zh';
            translatePage(currentLang);
        }

        langSwitchDesktop.addEventListener('click', toggleLanguage);
        langSwitchMobile.addEventListener('click', toggleLanguage);
        
        // 初始加载时翻译页面
        translatePage(currentLang);

        // --- 移动菜单切换 ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // 点击菜单链接后关闭移动菜单
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });

        // 导航栏滚动时改变背景
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('bg-opacity-80');
            } else {
                navbar.classList.remove('bg-opacity-80');
            }
        });
    });
    </script>

</body>
</html>
